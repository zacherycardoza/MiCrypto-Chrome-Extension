{
  "name": "MiCrypto",
  "description": "Crypto Tracker",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "Pages/popup.html",
    "default_icon": {
      "32": "Resources/IMG/atom32.png",
      "64": "Resources/IMG/atom64.png",
      "128": "Resources/IMG/atom128.png"
    }
  },
  "icons": {
    "32": "Resources/IMG/atom32.png",
    "64": "Resources/IMG/atom64.png",
    "128": "Resources/IMG/atom128.png"
  }
}